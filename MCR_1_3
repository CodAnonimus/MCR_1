#include <stdio.h>

int main() {
    int n;
    printf("Введіть вік людини (натуральне число до 100): ");
    scanf("%d", &n);

    if (n >= 1 && n <= 100) {
        if (n % 10 == 1 && n != 11) {
            printf("%d рік\n", n);
        } else if ((n % 10 >= 2 && n % 10 <= 4) && !(n >= 12 && n <= 14)) {
            printf("%d роки\n", n);
        } else {
            printf("%d років\n", n);
        }
    } else {
        printf("Введене число не відповідає умові (натуральне число до 100).\n");
    }

    return 0;
}
